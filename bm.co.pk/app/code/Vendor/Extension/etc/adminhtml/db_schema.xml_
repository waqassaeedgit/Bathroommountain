<?xml version="1.0"?>
<schema xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:Setup/Declaration/Schema/etc/schema.xsd">
    <table name="product_helloworld">
        <column xsi:type="int" name="id" padding="10" identity="true" nullable="false" comment="id" />
        <column xsi:type="varchar" name="name" length="100" nullable="true" comment="Product Name" />
        <column xsi:type="varchar" name="sku" length="100" nullable="true" comment="Product SKU" />
        <column xsi:type="varchar" name="price" length="100" nullable="true" comment="Product Price" />
        <constraint xsi:type="primary" referenceId="PRIMARY">
            <column name="id" />
        </constraint>
    </table>
</schema>